<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%- reqUserDisplayName %> | Ideoxan</title>

        <link rel="stylesheet" type="text/css" href="/static/css/vars.css">
        <link rel="stylesheet" type="text/css" href="/static/css/general.css">
        <link rel="stylesheet" type="text/css" href="/static/css/site.css">
        
        <link rel="icon" type="image/png" href="/static/img/ix_color_pb.png">
        <link rel="stylesheet" type="text/css" href="https://cdn.materialdesignicons.com/5.1.45/css/materialdesignicons.min.css">
    </head>
    <body>
        <%- include('./partials/nav.ejs') %>

        <%- include('./partials/headeruser.ejs', {heading: '' + reqUserDisplayName}) %>

        <main id="container">
            <div class="contentdiv cd-type-0">
                <h1 class="heading">Progress</h1>
                <h2 class="subheading"><%- reqUserDisplayName %>'s Progress on Courses</h2>
                <div class="prog-container">
                    <% inProgress.forEach(course => { %> 
                        <div class="prog">
                            <div class="prog-circle">
                                <svg><circle class="prog-circle-back" cx="28" cy="28" r="28"></circle><circle class="prog-circle-top" cx="28" cy="28" r="28" style="stroke-dashoffset: calc(175.929px - calc(175.929px * <%- course.percent/100 %>)) !important;"></circle></svg>
                                <div class="prog-percent">
                                    <%- course.percent %>%
                                </div>
                            </div>
                            <div class="prog-content">
                                <a href="/course/<%- course.name.toLowerCase().replace(/ /g, '-').replace(/[\(\).]/g, '') %>"><h3 class="prog-course"><%- course.name %></h3></a>
                                <h2 class="subheading prog-start"><span>Started 2 Weeks Ago</span></h2>
                            </div>
                        </div>
                    <% }) %>
                    <% if (inProgress.length < 1) { %>
                        <div class="prog-empty">
                            <span class="mdi mdi-heart-pulse ico-64px ico-white"></span>
                            <p class="prog-empty-header">Nothing much here...</p>
                            <p class="prog-empty-subheader">Seems a little empty.</p>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="contentdiv cd-type-0">
                <h1 class="heading">Completed</h1>
                <h2 class="subheading"><%- reqUserDisplayName %>'s Completed Courses and Paths </h2>
                <div class="prog-container">
                    <% completed.forEach(course => { %> 
                        <div class="prog">
                            <div class="prog-circle">
                                <svg><circle class="prog-circle-back" cx="28" cy="28" r="28"></circle><circle class="prog-circle-top" style="stroke-dashoffset: calc(175.929px - calc(175.929px * <%- course.percent/100 %>)) !important;" cx="28" cy="28" r="28"></circle></svg>
                                <div class="prog-percent">
                                    <%- course.percent %>%
                                </div>
                            </div>
                            <div class="prog-content">
                                <a href="/course/<%- course.name.toLowerCase().replace(/ /g, '-').replace(/[\(\).]/g, '') %>"><h3 class="prog-course"><%- course.name %></h3></a>
                                <% if (course.path.hasPath) { %> <h2 class="subheading prog-start"><span><span class="mdi mdi-<%- course.path.icon %> ico-12px ico-white"></span><%- course.path.name %></h2> <% } %>
                            </div>
                        </div>
                    <% }) %>
                    <% if (completed.length < 1) { %>
                        <div class="prog-empty">
                            <span class="mdi mdi-heart-pulse ico-64px ico-white"></span>
                            <p class="prog-empty-header">Nothing much here...</p>
                            <p class="prog-empty-subheader">Seems a little empty.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>

        <!-- Scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.20.0/plugins/autoloader/prism-autoloader.min.js"></script>

        <script src="/static/js/index.js" type="text/javascript"></script>
        <script src="/static/js/utils.js" type="text/javascript"></script>
    </body>
</html>