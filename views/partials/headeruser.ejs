<header class="headershort">
    <div id="header-short-header"><%- heading %></div>
    <p><% reqUserRoles.forEach(role => { %>
        <% if (role == 0) { %> <span class="mdi mdi-account ico-24px ico-white" title="User"></span> <% } %>
        <% if (role == 1) { %> <span class="mdi mdi-hammer-wrench ico-24px ico-white" title="Site Admin"></span> <% } %>
        <% if (role == 2) { %> <span class="mdi mdi-account-cancel ico-24px ico-html5" title="Banned"></span> <% } %>
        <% if (role == 3) { %> <span class="mdi mdi-star ico-24px ico-javascript" title="IX+ Member"></span> <% } %>
    <% }) %></p>
</header>